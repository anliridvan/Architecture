{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2015",
        "noImplicitAny": false, // Close implicit 'Any' type using  ex: var value;
        "noUnusedParameters": false, // Close UnUsed parameter
        "sourceMap": true, // Debug TS code -Do Not deploy on Prod publish --Ridvan
        "lib": ["es2018", "dom"]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "strictTemplates": true
    },
    "files": ["src/main.ts", "src/polyfills.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
